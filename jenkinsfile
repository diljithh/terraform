pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION    = 'ap-south-1' // âœ… Region passed as env var
    }


        stage('Terraform Init') {
            steps {
                dir('terraform-ec2') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('terraform-ec2') {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform-ec2') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }

}
